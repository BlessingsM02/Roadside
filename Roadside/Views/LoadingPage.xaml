<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Roadside.ViewModels"
             x:Class="Roadside.Views.LoadingPage">

    <ContentPage.BindingContext>
        <vm:LoadingViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding AllWorking}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="20"
                                 Spacing="20">
                        <!--<Label Text="{Binding Id}" FontSize="Medium" />
                        <Label Text="{Binding Latitude}" FontSize="Small" />
                        <Label Text="{Binding Longitude}" FontSize="Small" />
                        <Label Text="{Binding FirstName}" FontSize="Small" />-->
                        <Label Text="{Binding LastName}" FontSize="Medium" />
                        <Label Text="{Binding MobileNumber}" FontSize="Small" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
